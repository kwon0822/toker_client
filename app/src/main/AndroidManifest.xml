        </activity>
        <activity android:name=".page.Page_Login" />
        <activity android:name=".page.Page_Main" />
        <activity android:name=".page.Page_Level" />
        <activity android:name=".page.Page_Chat" />
        <activity android:name=".page.Page_ChatM" />
