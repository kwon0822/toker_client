<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.toker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".tcp.SocketAPI"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".activity.Activity_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Activity_Login" />
        <activity android:name=".activity.Activity_Main" />
        <activity android:name=".activity.Activity_Chat" />
        <activity android:name=".activity.Activity_Reminisce" />
        <activity
            android:name=".activity.Activity_Notice"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".activity.Activity_Posting"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".activity.Activity_Level"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".activity.Activity_Filter"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".activity.Activity_Message"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".activity.Activity_Memory"
            android:theme="@style/Theme.AppCompat.Dialog" />
    </application>

</manifest>