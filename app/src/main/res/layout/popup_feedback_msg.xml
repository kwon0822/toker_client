<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="250dp"
    android:background="@color/tokerHeavyGray">

    <Button
        android:id="@+id/popup_feedback_msg_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="끄기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/popup_feedback_msg_edittext_contents"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="80dp"
        android:background="@color/tokerWhite"
        android:gravity="top"
        android:hint="전달하려는 쪽지 내용을 적어주세요! \n (쪽지 내용은 50자 이내로 적어주세요.)"
        android:textColor="@color/tokerHeavyGray"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_feedback_msg_button_back"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/popup_feedback_msg_textview_communication"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="지속적인 연락을 원하신다면 연락처도 함께 전달하세요! \n 토커는 답장하기 기능은 제공하지 않습니다."
        android:textColor="@color/tokerWhite"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_feedback_msg_edittext_contents"
        app:layout_constraintVertical_bias="0.131" />

    <Button
        android:id="@+id/popup_feedback_msg_button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쪽지 보내기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_feedback_msg_textview_communication" />


</androidx.constraintlayout.widget.ConstraintLayout>