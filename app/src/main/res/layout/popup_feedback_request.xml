<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="250dp"
    android:background="@color/tokerHeavyGray">

    <Button
        android:id="@+id/popup_feedback_request_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="끄기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/popup_feedback_request_edittext_contents"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="80dp"
        android:background="@color/tokerWhite"
        android:gravity="top"
        android:hint="토커에 대한 의견이라면 무엇이든 적어주세요!"
        android:textColor="@color/tokerHeavyGray"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_feedback_request_button_back"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/popup_feedback_request_textview_communication"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="진지하게 고민한 뒤 꼭 답변드리겠습니다. \n 소중한 피드백 정말 감사드려요!"
        android:textColor="@color/tokerWhite"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_feedback_request_edittext_contents"
        app:layout_constraintVertical_bias="0.131" />

    <Button
        android:id="@+id/popup_feedback_request_button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="의견 보내기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_feedback_request_textview_communication" />


</androidx.constraintlayout.widget.ConstraintLayout>